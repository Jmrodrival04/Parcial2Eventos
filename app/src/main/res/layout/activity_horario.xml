<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para la asignatura -->
    <EditText
        android:id="@+id/et_asignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Asignatura"
        android:inputType="text" />

    <!-- Campo para el día -->
    <EditText
        android:id="@+id/et_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Día"
        android:inputType="text"
        android:layout_marginTop="8dp" />

    <!-- Campo para la hora -->
    <EditText
        android:id="@+id/et_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora"
        android:inputType="time"
        android:layout_marginTop="8dp" />

    <!-- Botón para agregar horario -->
    <Button
        android:id="@+id/btn_agregar_horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Horario"
        android:layout_marginTop="16dp" />

    <!-- Lista de horarios -->
    <ListView
        android:id="@+id/lista_horarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>
